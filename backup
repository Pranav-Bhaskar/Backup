echo "Collecting files for backup.";
echo "This step may take some time.";
find . -type f \( -exec sha1sum "$PWD"/{} \; \) > sha1.sum;
e=`pwd`;
d=${e%/};
cd ../;
zip -r "temp.zip" "$d";
sha1sum "temp.zip" > "temp.zip.sha1sum";
zip -e "backup.zip" "temp.zip" "temp.zip.sha1sum";
sha1sum "backup.zip" > "backup.zip.sha1sum";
rm "temp.zip" "temp.zip.sha1sum";
cd "$e";
rm "sha1.sum";
echo "Done.";
